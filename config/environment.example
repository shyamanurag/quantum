# Sharekhan API Configuration
SHAREKHAN_API_KEY=your_sharekhan_api_key_here
SHAREKHAN_SECRET_KEY=your_sharekhan_secret_key_here
SHAREKHAN_CUSTOMER_ID=your_sharekhan_customer_id_here
SHAREKHAN_ACCESS_TOKEN=your_sharekhan_access_token_here
